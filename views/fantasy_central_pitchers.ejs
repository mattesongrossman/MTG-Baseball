    <div class="container-fluid">
      <!-- Example DataTables Card-->
      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> 2018 Steamer Projections</div>
          <!-- Breadcrumbs-->
          <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/fantasy_central" >Batters</a>
          </li>
          <li class="breadcrumb-item active">
            <a href="/fantasy_central_pitchers">Pitchers</a>
          </li>
          </ol>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
            <tr>
              <th>ADP</th>
              <th>Name</th>
              <th>Team</th>
              <th>W</th>
              <th>L</th>
              <th>ERA</th>
              <th>FIP</th>
              <th>SV</th>
              <th>WHIP</th>
              <th>K_9</th>
              <th>WAR</th>
              <th>Drafted?</th>
              <th>Team</th>
              </tr>
              </thead>
              <tfoot>
              <tr>
              <th>ADP</th>
              <th>Name</th>
              <th>Team</th>
              <th>W</th>
              <th>L</th>
              <th>ERA</th>
              <th>FIP</th>
              <th>SV</th>
              <th>WHIP</th>
              <th>K_9</th>
              <th>WAR</th>
              <th>Drafted?</th>
              <th>Team</th>
              </tr>
              </tfoot>
              <tbody>
              <% for(let i=0; i< playerData.length ; i++) { %>
              <tr>
              <td><%=playerData[i].adp%></td>
              <td><a href = "https://www.fangraphs.com/statss.aspx?playerid=<%=playerData[i].playerid%>"><%=playerData[i].name%></a></td>
              <td><%=playerData[i].team%></td>
              <td><%=playerData[i].w%></td>
              <td><%=playerData[i].l%></td>
              <td><%=playerData[i].era%></td>
              <td><%=playerData[i].fip%></td>
              <td><%=playerData[i].sv%></td>
              <td><%=playerData[i].whip%></td>
              <td><%=playerData[i].k_9%></td>
              <td><%=playerData[i].war%></td>
              <td id = "draftedCell" value = "<%=playerData[i].drafted%>"><form id = "draftedStatus" action="/fantasy_central_pitchers/<%=playerData[i].playerid%>" method="POST"><fieldset>
                <input type="hidden" name="drafted" value = "<%=playerData[i].drafted%>">
                <button name="submit" type="submit" class="btn-primary" onclick = "draftedStatus();"><%=playerData[i].drafted%></button>
              </fieldset></td>
              <td><form action="/myTeam" method="POST"><fieldset>
                <input type="hidden" name="name" value = "<%=playerData[i].name%>">
                <input type="hidden" name="team" value = "<%=playerData[i].team%>">
                <input type="hidden" name="playerid" value = "<%=playerData[i].playerid%>">
                <button name="submit" type="submit" class="btn-primary">Add to Team</button>
              </fieldset></form></td>
              </tr>
              <% } %>
              </tbody>
              </table>
          </div>
